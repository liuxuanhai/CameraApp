<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.ippd.cameraapp" >

    <!--Need API > 12 For USB HOSTING-->
    <uses-sdk
        android:minSdkVersion="12">
    </uses-sdk>

    <!--MARK - CAMERA PERMISSIONS && FEATURES-->
    <uses-permission
        android:name="android.permission.CAMERA">
    </uses-permission>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE">
    </uses-permission>
    <uses-permission
        android:name="android.permission.RECORD_AUDIO">
    </uses-permission>
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION">
    </uses-permission>

    <uses-feature
        android:name="android.hardware.camera">
    </uses-feature>


    <!--MARK - USB HOST PERMISSIONS-->
    <uses-feature
        android:name="android.hardware.usb.host">
    </uses-feature>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <!--Parent activity-->
        <activity android:name=".MainActivity"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <!--A child of the parent activity-->
        <activity
            android:name=".InspectionDetails"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

        </activity>
            <activity
            android:name=".PartDetails"
            android:parentActivityName=".InspectionDetails"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

        </activity>
        <activity
            android:name=".InspectionListActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
        <activity
            android:name=".InspectionInfoActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
        <activity
            android:name=".UsbHostActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
        <activity
            android:name=".UsbCameraActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
